<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_activity_background"
    android:padding="18dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/timeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchEditText"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        tools:text="1:00" />

    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/searchButton"
        android:hint="Enter city name"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white" />

    <Button
        android:id="@+id/searchButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_search_24dp" />

    <ImageButton
        android:layout_marginTop="24dp"
        android:id="@+id/searchWithLocationButton"
        android:layout_width="40sp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/searchButton"
        android:onClick="searchWithLocation"
        android:background="@drawable/ic_gps_24dp" />


    <TextView
        android:id="@+id/cityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/celsiusText"
        android:textColor="#E6FF00"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        tools:text="Tbilisi" />

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cityText"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        tools:text="mostly cloud"
        android:layout_centerHorizontal="true"/>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/weatherImage"
        android:layout_toStartOf="@id/celsiusText"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_fileName="thermometer.json"/>

    <TextView
        android:id="@+id/celsiusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weatherImage"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        tools:text="32C" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/windImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_below="@id/weatherImage"
        android:layout_toEndOf="@id/celsiusText"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_fileName="wind_animat.json"/>

    <TextView
        android:id="@+id/windText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weatherImage"
        android:layout_marginStart="4dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@id/windImage"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        tools:text="44km/h" />

    <ImageView
        tools:src="@drawable/weather_icon"
        android:id="@+id/weatherImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="152dp" />


    <ImageView
        android:id="@+id/sunriseImage"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/sunrise_icon"
        android:padding="16dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/sunriseImage"
        android:text="sunrise"
        android:textSize="20sp"
        android:textColor="@android:color/white"/>

    <ImageView
        android:id="@+id/sunsetImage"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/sunset_icon"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/sunsetImage"
        android:layout_alignParentEnd="true"
        android:text="sunset"
        android:textSize="20sp"
        android:textColor="@android:color/white"/>

    <ImageView
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@drawable/line_bg"
        android:layout_toEndOf="@id/sunriseImage"
        android:layout_toStartOf="@id/sunsetImage"
        android:layout_marginBottom="48dp"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:id="@+id/sunriseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/line"
        android:layout_toEndOf="@id/sunriseImage"
        tools:text="22:00"
        android:textColor="@android:color/white"/>
    <TextView
        android:id="@+id/sunsetText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/line"
        android:layout_toStartOf="@id/sunsetImage"
        tools:text="22:00"
        android:textColor="@android:color/white"/>


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>